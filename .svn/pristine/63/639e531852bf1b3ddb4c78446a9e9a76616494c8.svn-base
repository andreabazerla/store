package com.andreabazerla.util;

public class StringUtility
{

	/**
	 * Return true if a string is empty
	 * 
	 * @param string
	 * @return
	 */
	public static boolean isStringEmpty(String string)
	{
		return string == null || string.isEmpty()
		       || string.trim()
		                .length() == 0;
	}

}
