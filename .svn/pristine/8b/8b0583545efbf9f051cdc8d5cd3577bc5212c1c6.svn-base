body {
	padding: 25px;
}

button {
	cursor: pointer;	
}

.header-form {
	position: relative;
	margin: 0 0 0 25px;
	display: inline-block;
	float: right;
}

.header-button {
	cursor: pointer;
}

.password-verdict {
	color: #dc3545;
	font-size: small;
}

.progress {
	position: relative;
	margin: 10px 0 5px 0;
	display: none;
}

.progress-bar-danger {
	background-color: red;
}

.progress-bar-warning {
	background-color: #007bff;
}

.progress-bar-success {
	background-color: #007bff;
}

.left-side {
	position: relative;
	float: left;
	display: inline-block;	
}

.right-side {
	position: relative;
	float: right;
	display: inline-block;	
}

.field-row {
	position: relative;
	margin: 25px 0;
}	

.field-name {
	font-size: 22px;
	font-weight: bold;
}

.field-value {
	font-size: 22px;
	font-weight: normal;
}

.profile-image {
	position: relative;
	width: 100%;
}

.btn-primary.disabled, .btn-primary:disabled {
	cursor: default;
	background-color: grey;
	border-color: grey;
}

.disabled {
	cursor: default;
	background-color: grey;
	border-color: grey;
}

.navbar-brand {
	font-weight: bold;
	color: #007bff;
}

.custom-file-control::after {
	content: "Choose an image...";
}

.custom-file-control::before {
	content: "Browse";
}

.name-surname {
	position: relative;
	margin: 0 0 0 50px;
}

.profile-icon {
	position: relative;
	width: 50px;
	margin: 0 0 0 25px;
}

.background-error {
	position: fixed;
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	color: #fff;
	background: #c0c0c0;
}

.error-error {
	margin: 0;
	padding: 0;
	font-family: arial;
	font-size: 10em;
	font-weight: bold;
	text-align: center;
}

.title-error {
    position: absolute;
    width: 100%;
    margin-top: -300px;
    top: 50%;
    font-size: 10em;
    font-family: arial;
    font-weight: bold;
    text-align: center;
    line-height: 200px;
}

.description-error {
	position: absolute;
    width: 100%;
    margin-top: -100px;
    top: 50%;
    font-size: 5em;
    font-family: arial;
    font-weight: bold;
    text-align: center;
    line-height: 100px;
}

.card-columns {
  @include media-breakpoint-only(xl) {
    column-count: 5;
  }
  @include media-breakpoint-only(lg) {
    column-count: 4;
  }
  @include media-breakpoint-only(md) {
    column-count: 3;
  }
  @include media-breakpoint-only(sm) {
    column-count: 2;
  }
}

.product {
	position: relative;
	max-width: 30%;
	margin: 15px;
	padding: 15px;
	float: left;
	border: 1px solid LightGrey;
	border-radius: 5px;
}

.product-img {
	position: relative;
	border-radius: 5px;
	width: 100%;
}

.product-name
{
	position: relative;
	margin: 15px 0 0 0;
}

.product-description {
	position: relative;
	margin: 15px 0 0 0;
}

.product-price {
	position: relative;
	margin: 15px 0 0 0;
    float: left;
    display: inline-block;
}

.product-action {
	position: relative;
	margin: 15px 0 0 0;
	float: right;
}

.cart-block {
	padding: 25px;
	background: #d0d0d0;
	border-radius: 5px;
}

.purchase {
	width: 100%;
	margin: 0 0 15px 0;
	border: 1px solid LightGrey;
	float: left;
	display: inline-block;
	border-radius: 5px;
}

.shopping-button {
	position: relative;
	margin: 15px 0 0 15px;
	float: left;
}

.slider:hover > .tooltip {
	opacity: 1 !important;
}